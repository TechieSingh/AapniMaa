<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_marginTop="0dp"
    tools:context=".mainnn">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/d"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/e"
            android:orientation="horizontal">

        </LinearLayout>

        <Button
            android:id="@+id/button8"
            android:layout_width="46dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_toStartOf="@+id/button10"
            android:layout_toLeftOf="@+id/button10"
            android:background="@drawable/bell"
            android:onClick="fun9" />

        <EditText
            android:layout_width="304dp"
            android:layout_height="59dp"
            android:layout_below="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_alignLeft="@+id/textView11"
            android:layout_marginStart="-63dp"
            android:layout_marginLeft="-63dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/login1"
            android:hint="SEARCH"
            android:paddingLeft="30dp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/cart"
            android:onClick="fun8" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp">

        </android.support.v4.view.ViewPager>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:layout_below="@+id/viewPager"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="29dp"
            android:text="Best Seller"
            android:textColor="#800404"
            android:textSize="25dp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="0dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button13"
                    android:layout_width="168dp"
                    android:layout_height="89dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/food1" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="168dp"
                    android:layout_height="89dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/food2" />

                <Button
                    android:id="@+id/button44"
                    android:layout_width="168dp"
                    android:layout_height="89dp"
                    android:layout_below="@+id/button9"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/food4" />

                <Button
                    android:id="@+id/button25"
                    android:layout_width="168dp"
                    android:layout_height="89dp"
                    android:layout_below="@+id/button9"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/food5" />

                <Button
                    android:id="@+id/button24"
                    android:layout_width="168dp"
                    android:layout_height="89dp"
                    android:layout_below="@+id/button25"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/food6" />

                <Button
                    android:id="@+id/button41"
                    android:layout_width="168dp"
                    android:layout_height="89dp"
                    android:layout_below="@+id/button25"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/images" />


            </RelativeLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="168dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_toStartOf="@+id/button8"
            android:layout_toLeftOf="@+id/button8"
            android:background="@drawable/capture" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>